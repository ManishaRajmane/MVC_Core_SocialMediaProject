@model LoginModel
@{
    Layout = "~/Views/Shared/MyMainLyaout.cshtml";
}
<div class="container-fluid">
    <div class="row">   
        <div class="col-md-8"></div>
        <div class="col-md-4" style="padding-top:2%;">
            @using (Html.BeginForm())
            {
                <div class="card">
                    <div class="card-header">
                        <h4>Login Here</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">  
                            <label>User Name/Email Address</label>
                            @Html.TextBoxFor(e=>e.UserName, new { @class = "form-control", @placeholder = "User Name" })
                        </div>
                        <div class="mb-3">
                            <label>Password</label>
                            @Html.PasswordFor(e=>e.Password, new { @class = "form-control", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
            }
            <h4 style="color:red">@ViewBag.msg</h4>
        </div>
    </div>
</div>