@model IEnumerable<TbltopicContent>
@using MVC_Core_SocialMediaProject.Models;
@{
    ViewData["Title"] = "Videos";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Videos</h1>
<hr>
<table class="table table-bordered w-100">
                <thead> 
                    <tr>
                        <th>Sr No</th> 
                        <th>Content Name</th> 
                        <th>Topic Name</th> 
                        <th>Cover Photo</th> 
                        <th>Video</th> 
                    </tr>
                </thead> 
                @{
                    int i=1;
                } 
                <tbody> 
                    @foreach (var item in Model) 
                    { 
                        <tr>
                            <td>@i</td>
                            <td>@item.ContentName</td> 
                            <td>@item.TopicId</td> 
                            <td>
                                <img src="~/TopicContent/@item.TopicId/@item.CoverPhoto" height="70" width="100" />
                            </td> 
                            <td>
                                <video style="height:100px;width:100%" controls>
                                    <source src="~/TopicContent/@item.TopicId/@item.VideoUrl" />
                                </video>
                            </td> 
                        </tr>
                        i++;
                    }
                    
                 </tbody> 
             </table>

